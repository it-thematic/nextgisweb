<div data-dojo-type="${baseClass}"
    data-dojo-attach-point="focusNode">
    <div data-dojo-type="dijit/layout/BorderContainer"
        data-dojo-props="gutters: false"
        style="width: 100%; height: 400px">
        <div data-dojo-type="dijit/layout/ContentPane"
            data-dojo-props="region: 'center'"
            style="padding: 1em 0;">
            <div data-dojo-type="dojox/layout/TableContainer"
              data-dojo-attach-point="wTableContainer"
              data-dojo-props="cols:1, labelWidth: 200">
                <select data-dojo-type="dijit/form/Select"
                    data-dojo-attach-point="wFormat"
                    data-dojo-props="sortByLabel: false"
                    title="{{gettext 'Format'}}" style="width: 100%">
                </select>
                <select data-dojo-type="dijit/form/Select"
                    data-dojo-attach-point="wSRS"
                    title="{{gettext 'SRS'}}" style="width: 100%">
                </select>
                <select data-dojo-type="dijit/form/Select"
                    data-dojo-attach-point="wEncoding"
                    title="{{gettext 'Encoding'}}" style="width: 100%">
                    <option value="UTF-8" selected="selected">UTF-8</option>
                    <option value="CP1251">Windows-1251</option>
                    <option value="CP1252">Windows-1252</option>
                </select>
                <input data-dojo-type="dijit/form/TextBox"
                    data-dojo-attach-point="wFID"
                    title="{{gettext 'FID field'}}"
                    value="ngw_id"/>
                <input data-dojo-type="dijit/form/CheckBox"
                    data-dojo-attach-point="wZipped"
                    title="{{gettext 'Zip archive'}}" checked/>
            </div>
        </div>
        <div data-dojo-type="dijit/layout/ContentPane"
            data-dojo-props="region: 'bottom'"
            style="padding: 1em 0;">
            <button data-dojo-type="dijit/form/Button" 
                data-dojo-attach-point="buttonSave"
                class="dijitButton--primary">{{gettext 'Save'}}</button>
        </div>
    </div> 
</div>